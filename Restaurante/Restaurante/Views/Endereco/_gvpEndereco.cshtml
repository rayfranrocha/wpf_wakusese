@{
    var grid = Html.DevExpress().GridView(settings =>
    {
        settings.Name = "gvEndereco";
        settings.CallbackRouteValues = new { Controller = "Endereco", Action = "gvpEndereco" };

        settings.SettingsEditing.AddNewRowRouteValues = new { Controller = "Endereco", Action = "gvpEnderecoAddNew" };
        settings.SettingsEditing.UpdateRowRouteValues = new { Controller = "Endereco", Action = "gvpEnderecoUpdate" };
        settings.SettingsEditing.DeleteRowRouteValues = new { Controller = "Endereco", Action = "gvpEnderecoDelete" };
        settings.SettingsEditing.Mode = GridViewEditingMode.EditFormAndDisplayRow;
        settings.SettingsBehavior.ConfirmDelete = true;

        settings.CommandColumn.Visible = true;
        settings.CommandColumn.ShowDeleteButton = true;
        settings.CommandColumn.ShowNewButtonInHeader = true;
        settings.CommandColumn.ShowEditButton = true;

        settings.KeyFieldName = "endeId";

        settings.SettingsPager.Visible = true;
        settings.Settings.ShowGroupPanel = false;
        settings.Settings.ShowFilterRow = true;
        settings.SettingsBehavior.AllowSelectByRowClick = true;

        settings.Columns.Add("endeId");
        settings.Columns.Add("endeLati");
        settings.Columns.Add("endeLongi");
        settings.Columns.Add("endeLograd");
        settings.Columns.Add("endePontoRefer");
        settings.Columns.Add("endeCEP");

});
		if (ViewData["EditError"] != null){
        grid.SetEditErrorText((string)ViewData["EditError"]);
    }
}
@grid.Bind(Model).GetHtml()